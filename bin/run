#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

use App\Command;
use App\Database;
use App\UserInput;

$userInput = new UserInput();
$command = new Command('app:requests:show');
$command->setUserInput($userInput);

$db = new \SQLite3(__DIR__ . '/../var/requests.db', SQLITE3_OPEN_CREATE | SQLITE3_OPEN_READWRITE);
$db->enableExceptions(true);

$database = new Database('requests');
$result = $database->fetch('requests', ['id' => null]);
foreach ($result as $row) {
    echo sprintf("ID: %d, Name: %s\n", $row['id'], $row['name']);
}
echo sprintf("%d requests found \n", count($result));
