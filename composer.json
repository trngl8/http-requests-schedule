{
    "require": {
        "php": ">=8.2.10",
        "monolog/monolog": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Module\\": "tests/unit",
            "Tests\\EndToEnd\\": "tests/e2e"
        }
    },
    "scripts": {
        "tests": "vendor/bin/phpunit tests/unit",
        "tests-e2e": "vendor/bin/phpunit tests/e2e"
    }
}
