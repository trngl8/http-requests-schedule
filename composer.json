{
    "require": {
        "php": ">=8.2.10",
        "ext-curl": "*",
        "ext-sqlite3": "*",
        "monolog/monolog": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\Unit\\": "tests/unit",
            "App\\Tests\\EndToEnd\\": "tests/e2e"
        }
    },
    "scripts": {
        "unit": "vendor/bin/phpunit tests/unit",
        "e2e": "vendor/bin/phpunit tests/e2e"
    }
}
